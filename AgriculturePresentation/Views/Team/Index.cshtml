@using EntityLayer.Concrete
@model List<Team>


}
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">List of our Team Members</h4>
                  
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Duty</th>
                            <th>Remove</th>
                            <th>Edit</th>

                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                        {
                            
                        
                        <tr>
                          <td class="py-1"><img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" />
                          </td>
                         <td>@item.PersonID </td>
                         <td>@item.PersonName </td>
                         <td>@item.PersonDuty </td>

                        <td><a href="/Team/DeleteTeam/@item.PersonID"  class="btn btn-outline-danger">Remove</a></td>
                        <td><a href="/Team/UpdateTeam/@item.PersonID " class="btn btn-outline-info">Edit</a></td>

                        </tr>
                        }
                      </tbody>
                    </table>
                <a href="/Team/AddTeam" class="btn btn-outline-success">Add </a>
                  </div>
                </div>
              </div>
            </div>