@using EntityLayer.Concrete
@model List<Adress>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Address List</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Address 1</th>
                            <th>Address 2</th>
                            <th>Address 3</th>
                            <th>Phone Number</th>
                            <th>Edit</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>

                                <td>@item.AdressID </td>
                                <td>@item.Description1 </td>
                                <td>@item.Description2 </td>
                                <td>@item.Description3 </td>
                                <td>@item.Description4 </td>
  
                                <td><a href="/Address/UpdateAddress/@item.AdressID " class="btn btn-outline-info">Edit</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>
