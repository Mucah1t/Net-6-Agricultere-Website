@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin List</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>UserName</th>
                           
                            <th>Remove</th>
                            <th>Edit</th>
                           


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AdminID</td>
                                <td>@item.UserName</td>
                                
                                <td><a href="/Admin/DeleteAdmin/@item.AdminID" class="btn btn-outline-danger">Remove</a></td>
                                <td><a href="/Admin/UpdateAdmin/@item.AdminID " class="btn btn-outline-info">Edit</a></td>
                                </tr>
                                }
                    </tbody>
               </table>
                <br />
                <a href="/Admin/AddAdmin" class="btn btn-outline-info">Add </a>
            </div>
        </div>
    </div>
</div>
