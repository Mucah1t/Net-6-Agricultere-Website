@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Existing Announcements</h4>
            <br />

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnouncementID)
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="Enter a Title" asp-for="Title">
                </div>
                <div class="form-group">

                    <input type="date" class="form-control" placeholder="Enter a Date" asp-for="Date">
                </div>
                <div class="form-group">

                    <textarea cols="60" rows="5" asp-for="Description" placeholder="Enter a Description" class="form-control"></textarea>
                </div>


                <button type="submit" class="btn btn-outline-info me-2">Edit</button>

            </form>
        </div>
    </div>
</div>