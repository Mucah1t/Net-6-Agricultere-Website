@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcement List</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Remove</th>
                            <th>Edit</th>
                            <th>Active/Passive</th>
                         

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Remove</a></td>
                                <td><a href="/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-outline-facebook">Edit</a></td>
                                @if (item.Status==true)
                                {
                                    <td><a href="/Announcement/StatusToFalse/@item.AnnouncementID" class="btn btn-outline-behance">Passive</a></td>
                                }
                                else{

                                 <td><a href="/Announcement/StatusToTrue/@item.AnnouncementID" class="btn btn-outline-dribbble">Active</a></td>
                                    
                                }
                            </tr>

                        }

                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-info">Add </a>
            </div>
        </div>
    </div>
</div>

       
