@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messages List</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name & Surname</th>
                            <th>Mail</th>
                            <th>Date</th>
                            <th>See the Message</th>
                           

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                
                                <td>@item.ContactID </td>
                                <td>@item.Name </td>
                                <td>@item.Mail </td>
                                <td>@item.Date </td>

                              
                                <td><a href="/Contact/MessageDetails/@item.ContactID " class="btn btn-outline-info">Go to Message</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>
