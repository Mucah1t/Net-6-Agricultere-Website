@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Service</h1>

<form method="post">

    @Html.HiddenFor(x=>x.ServiceID) @*to store ID*@
   
    <input type="text" asp-for="Title" class="form-control" placeholder="Title" />
    <br />

    
    <input type="text" asp-for="Image" class="form-control" placeholder="Image" />
    <br />

    
    <input type="text" asp-for="Description" class="form-control" placeholder="Description" />
    <br />

    <button class="btn btn-outline-success">Save</button>
</form>