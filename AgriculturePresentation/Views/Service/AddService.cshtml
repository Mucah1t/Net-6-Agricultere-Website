@model AgricultureUI.Models.ServiceAddViewModel

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Service</h1>

<form method="post">
    <span asp-validation-for="Title" class="text-banger"></span>
    <input type="text" asp-for="Title" class="form-control" placeholder="Title" />
    <br />

    <span asp-validation-for="Image" class="text-danger"></span>
    <input type="text" asp-for="Image" class="form-control" placeholder="Image" />
    <br />

    <span asp-validation-for="Description" class="text-danger"></span>
    <input type="text" asp-for="Description" class="form-control" placeholder="Description" />
    <br />

    <button class="btn btn-outline-info">Add</button>
</form>