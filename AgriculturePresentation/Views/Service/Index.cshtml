@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Service List</h1>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service List</h4>
          
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                        <th>#</th>
                            <th>Title</th>
                            <th>Remove</th>
                            <th>Edit</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServiceID</td>
                                <td>@item.Title</td>
                                <td><a href="/Service/DeleteService/@item.ServiceID"  class="btn btn-outline-danger">Remove</a></td>
                                <td><a href="/Service/UpdateService/@item.ServiceID " class="btn btn-outline-facebook">Edit</a></td>

                            </tr>

                        }
                        
                    </tbody>
                </table>
                <br />  
                <a href="/Service/AddService" class="btn btn-outline-success">Add </a>
            </div>
        </div>
    </div>
</div>