@model EntityLayer.Concrete.Image

@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edite Image </h4>
            <br />

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.ImageID)
                <div class="form-group">
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Enter a Title" asp-for="Title">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Enter a new Image Url" asp-for="Description">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Enter a new Image Url" asp-for="ImageUrl">
                </div>




                <button type="submit" class="btn btn-outline-info me-2">Save</button>

            </form>
        </div>
    </div>
</div>